{
    "parent": "./data/shared.json",
    "data": "./data/gas/storage/data.csv",
    "options": {
        "title": "Speicherfüllstand",
        "subtitle": "in TWh",
        "footer": "Source: GIE – Gas Infrastructure Europe"
    },
    "mapping": {
        "y": {
            "column": "value",
            "type": "numeric",
            "scale": {
                "type": "linear",
                "domain": [0, null],
                "orientation": "vertical"
            },
            "axis": {
                "ticks": 6,
                "position": "left",
                "grid": true,
                "format": ",.2f"
            },
            "hover": {
                "format": ",.2f"
            }
        }
    },
    "plot": [
        {
            "type": "svg:path",
            "categories": ["year"],
            "props": {
                "stroke-width": "@stroke-width",
                "fill": "none",
                "opacity": "@opacity",
                "stroke": "@color",
                "d": {
                    "x": "@x:scaled",
                    "y": "@y:scaled"
                },
                "hover-opacity": 1,
                "hover-stroke-width": 3
            }
        }
    ]
}
