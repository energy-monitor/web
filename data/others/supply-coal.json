{
    "data": "supply-coal.csv",
    "parent": "/data/shared-base.json",
    "options": {
        "height": 220,
        "title": "Absatz von Kohle",
        "subtitle": "in tausend Tonnen",
        "footer": "Source: eurostat - nrg_cb_sffm"
    },
    "globals": {
        "shareScale": ["x", "y"]
    },
    "formElements": [{
        "id": "scaleGas",
        "name": "Y-Skala",
        "ref": "shareScale",

        "type": "switch",
        "values": [
            { "id": "shareAxisOff", "value": ["x"], "name": "Getrennt" },
            { "id": "shareAxisOn", "value": ["x", "y"], "name": "Geteilt" }
        ]
    }],
    "mapping": {
        "x": {
            "hover": {
                "format": "%b"
            }
        },
        "y": {
            "column": "value",
            "axis": {
                "format": ",.1f"
            },
            "hover": {
                "format": ",.2f"
            }
        },
        "year": {
            "props": {
                "manual": {
                    "avg13-18": {
                        "color": "#444", "name": "Ã˜&nbsp'13&nbsp-&nbsp'18"
                    }
                }
            }
        },
        "type": {
            "column": "product",
            "legend": {
                "symbol": {
                    "size": 0,
                    "elements": []
                }
            },
            "props": {
                "manual": {
                    "total": {
                        "name": "Gesamt", "visible": true
                    },
                    "stein": {
                        "name": "Steinkohle", "visible": true
                    },
                    "braun": {
                        "name": "Braunkohle", "visible": false
                    },
                    "koks": {
                        "name": "Koks", "visible": false
                    }
                }
            },

            "hover": {

            }
        }
    },
    "facets": {
        "dim": ["type"],
        "scales": {
            "prop": "ref",
            "ref": "shareScale"
        },
        "cols": {
            "prop": "steps",
            "ref": "totalWidth",
            "steps": [
                {"cut":   0, "value": 1},
                {"cut": 550, "value": 2}
            ]
        }
    },
    "plot": {
        "categories": ["year", "type"],
        "props": {
            "stroke-dasharray": "@stroke-dasharray"
        }
    }
}
