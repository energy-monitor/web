{
    "data": "supply-total.csv",
    "parent": "/data/shared-base.json",
    "options": {
        "height": 220,
        "title": "Absatz von fossilen Energieträgern",
        "subtitle": "nach Energiegehalt in Petajoule",
        "footer": "Source: eurostat, eigene Berechnungen"
    },
    "mapping": {
        "x": {
            "hover": {
                "format": "%b"
            }
        },
        "y": {
            "column": "p.j",
            "axis": {
                "format": ",.1f"
            },
            "hover": {
                "format": ",.2f"
            }
        },
        "year": {
            "props": {
                "manual": {
                    "avg13-18": {
                        "color": "#444", "name": "Ø&nbsp'13&nbsp-&nbsp'18"
                    }
                }
            }
        },
        "type": {
            "column": "product",
            "legend": {
                "symbol": {
                    "size": 0,
                    "elements": []
                }
            },
            "props": {
                "manual": {
                    "gas": {
                        "name": "Erdgas", "visible": true
                    },
                    "coal": {
                        "name": "Kohle", "visible": true
                    },
                    "oil": {
                        "name": "Mineralöl", "visible": true
                    }
                }
            },
            "hover": {

            }
        }
    },
    "facets": {
        "dim": ["type"],
        "cols": {
            "prop": "steps",
            "ref": "totalWidth",
            "steps": [
                {"cut":   0, "value": 1},
                {"cut": 550, "value": 3}
            ]
        }
    },
    "plot": {
        "categories": ["year", "type"],
        "props": {
            "stroke-dasharray": "@stroke-dasharray"
        }
    }
}
