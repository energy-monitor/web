{
    "parent": "/data/shared-base.json",
    "data": "load-hourly.csv",
    "options": {
        "title": "Stromkonsum im Tagesverlauf",
        "subtitle": "in MWh",
        "footer": "Source: ENTSO-E - Actual Total Load 6.1.A"
    },
    "mapping": {
        "x": {
            "column": "hour",
            "type": "numeric",
            "scale": {
                "type": "linear",
                "domainAbs": [-0.2, 0.2],
                "orientation": "horizontal"
            },
            "axis": {
                "ticks": {
                    "prop": "relative",
                    "ref": "innerWidth",
                    "ratio": 0.017
                },
                "position": "bottom",
                "rotate": 0,
                "format": "c"
            },
            "hover": {
                "format": "c"
            }
        },
        "y": {
            "axis": {
                "format": ",.1f"
            },
            "hover": {
                "format": ",.2f"
            }
        }
    },
    "plot": [
        {
            "type": "svg:path",
            "categories": ["year"],
            "props": {
                "stroke-width": "@stroke-width",
                "fill": "none",
                "opacity": "@opacity",
                "stroke": "@color",
                "d": {
                    "x": "@x:scaled",
                    "y": "@y:scaled"
                }
            }
        }
    ]
}
