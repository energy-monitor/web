{
    "data": "data-facets.csv",
    "options": {
        "height": 200,
        "margins": {"top": 5, "right": 30, "bottom": 35, "left": 50},
        "title": "Stromproduktion",
        "subtitle": "nach Quellen, Durchschnitt letzter vier Wochen, in MWh",
        "footer": "Source: ENTSO-E - Aggregated Generation Per Type 16.1.B C"
    },
    "globals": {
        "shareScale": ["x"]
    },
    "formElements": [{
        "id": "scale",
        "name": "Y-Skala",
        "ref": "shareScale",

        "type": "switch",
        "values": [
            { "id": "shareAxisOff", "value": ["x"], "name": "Getrennt" },
            { "id": "shareAxisOn", "value": ["x", "y"], "name": "Geteilt" }
        ]
    }],
    "mapping": {
        "x": {
            "column": "date20",
            "type": "date",
            "scale": {
                "type": "time",
                "domainAbs": [-0.2, 0.2],
                "orientation": "horizontal"
            },
            "axis": {
                "ticks": {
                    "prop": "relative",
                    "ref": "innerWidth",
                    "ratio": 0.017
                },
                "position": "bottom",
                "rotate": 0,
                "format": "%b"
            },
            "hover": {
                "format": "%e. %b"
            }
        },
        "y": {
            "column": "rm28",
            "type": "numeric",
            "scale": {
                "type": "linear",
                "orientation": "vertical",
                "domain": [0, null],
                "domainRel": [0, 0.15]
            },
            "axis": {
                "ticks": 4,
                "position": "left",
                "grid": true,
                "format": ".1f"
            },
            "hover": {
                "format": ".2f"
            }
        },
        "source": {
            "column": "source.group",
            "props": {
                "common": {
                    "size": 2
                },
                "manual": {
                    "Wind":   { "color": "#BBD7EE", "name": "Wind" },
                    "Solar":  { "color": "#F3D039", "name": "Solar" },
                    "Hydro":  { "color": "#5BC5F2", "name": "Hydro" },
                    "Gas":    { "color": "#C3423F", "name": "Erdgas" },
                    "Coal":   { "color": "#8B4513", "name": "Kohle" },
                    "others": { "color": "#888",    "name": "Andere" }
                }
            }
        },
        "year": {
            "column": "year",
            "legend": {
                "symbol": {
                    "size": 16,
                    "elements": [{
                        "type": "line",
                        "props": {
                            "x1": 0, "x2": 16, "y1": 8, "y2": 8,
                            "stroke": "@color", "stroke-width": "@stroke-width",
                            "opacity": "@opacity"
                        }
                    }]
                }
            },
            "props": {
                "common": {
                    "opacity": 0.9,
                    "stroke-width": 2
                },
                "manual": {
                    "2022": { "color": "#C3423F", "opacity": 1 },
                    "2021": { "color": "#BBD7EE" },
                    "2020": { "color": "#F3D039" },
                    "2019": { "color": "#ABD6A9" }
                }
            },
            "hover": {

            }
        }
    },
    "facets": {
        "dim": ["source"],
        "scales": {
            "prop": "ref",
            "ref": "shareScale"
        },
        "cols": {
            "prop": "steps",
            "ref": "totalWidth",
            "steps": [
                {"cut":   0, "value": 1},
                {"cut": 550, "value": 2},
                {"cut": 1000, "value": 3}
            ]
        }
    },
    "plot": [
        {
            "type": "svg:path",
            "categories": ["source", "year"],
            "props": {
                "stroke-width": "@stroke-width",
                "fill": "none",
                "opacity": "@opacity",
                "stroke": "@color",
                "d": {
                    "x": "@x:scaled",
                    "y": "@y:scaled"
                }
            }
        }
    ]
}
