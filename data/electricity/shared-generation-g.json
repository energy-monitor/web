{
    "parent": "/data/shared-base.json",
    "options": {
        "height": 190,
        "margins": {"top": 5, "right": 15, "bottom": 35, "left": 45},
        "title": "Stromproduktion",
        "subtitle": "nach Quellen, t√§glich (rollierender 4-Wochen Durchschnitt), in GWh",
        "footer": "Source: ENTSO-E - Aggregated Generation Per Type 16.1.B C"
    },
    "formElements": [{
        "id": "scale",
        "name": "Y-Skala",
        "ref": "shareScale",

        "type": "switch",
        "values": [
            { "id": "shareAxisOff", "value": ["x"], "name": "Getrennt" },
            { "id": "shareAxisOn", "value": ["x", "y"], "name": "Geteilt" }
        ]
    }],
    "mapping": {
        "y": {
            "column": "rm28",
            "type": "numeric",
            "scale": {
                "type": "linear",
                "orientation": "vertical",
                "domain": [0, null],
                "domainRel": [0, 0.15]
            },
            "axis": {
                "ticks": 4,
                "position": "left",
                "grid": true,
                "format": ".1f"
            },
            "hover": {
                "format": ".2f"
            }
        },
        "source": {
            "column": "source.group"
        }
    },
    "facets": {
        "dim": ["source"],
        "scales": {
            "prop": "ref",
            "ref": "shareScale"
        },
        "cols": {
            "prop": "steps",
            "ref": "totalWidth",
            "steps": [
                {"cut":   0, "value": 1},
                {"cut": 550, "value": 2},
                {"cut": 1000, "value": 3}
            ]
        }
    },
    "plot": {
        "categories": ["source", "year"],
        "props": {
            "highlight-stroke-width": 2.5
        }
    }
}
