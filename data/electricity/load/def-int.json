{
    "parent": "/data/shared-base.json",
    "data": "data-int.csv",
    "options": {
        "height": 200,
        "margins": {"top": 5, "right": 15, "bottom": 35, "left": 45},
        "title": "Stromkonsum",
        "subtitle": "in GWh",
        "footer": "Source: ENTSO-E - Actual Total Load 6.1.A"
    },
    "globals": {
        "shareScale": ["x"]
    },
    "formElements": [{
        "id": "scale",
        "name": "Y-Skala",
        "ref": "shareScale",

        "type": "switch",
        "values": [
            { "id": "shareAxisOff", "value": ["x"], "name": "Getrennt" },
            { "id": "shareAxisOn", "value": ["x", "y"], "name": "Geteilt" }
        ]
    }],
    "mapping": {
        "y": {
            "column": "value",
            "type": "numeric",
            "scale": {
                "type": "linear",
                "orientation": "vertical",
                "domain": [0, null],
                "domainRel": [0, 0.15]
            },
            "axis": {
                "ticks": 4,
                "position": "left",
                "grid": true,
                "format": ",.0f"
            },
            "hover": {
                "format": ".1f"
            }
        },
        "country": {
